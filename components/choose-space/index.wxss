/* components/choose-space/index.wxss */
.space{
  padding: 0 32rpx;
  position: relative;
  background: #fff;
  z-index: 9999;
}
.space .space-title{
  text-align: center;
  font-size: 32rpx;
  color: #212121;
}
.space .space-list{
  width: calc(100% - 64rpx);
  padding-top: 70rpx;
  display: none;
  position: absolute;
  background: #fff;
}
.space .space-list.active{
  display: block;
}
.space .space-list .space-item{
  font-size: 28rpx;
  color: #212121;
  line-height: 48rpx;
  padding: 20rpx 44rpx 20rpx 0;
}
.space .space-list .space-item.active{
  background: url(data:image/png;base64,) right center no-repeat;
}