/* component/zyslider.wxss */
.container {
    /*height: 100%;*/
    width: calc(100% - 8rpx);
    position: relative;
}
.price{
  font-size: 24rpx;
  margin-top: 39rpx;
}

.slider-body {
    height: 4rpx;
    background-color: #ddd;
    position: relative;
}

.body {
    bottom: 62rpx;
    background-color: #ff5555;
    z-index: 0.3;
}

.left {
    bottom: 58rpx;
    z-index: 0.1;
}

.right {
    z-index: 0.2;
    bottom: 66rpx;
}

.slider-item {
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
    background-color: #fff;
    border: 4rpx solid #ff5555;
    z-index: 2;
}

.min {
    position: relative;
    top: 11rpx;
    /*left: 100rpx;*/
}

.max {
    position: relative;
    bottom: 34rpx;
    /*left: 600rpx;*/
}

.hide{
  display: none;
}