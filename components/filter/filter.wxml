<!--components/filter/filter.wxml-->
<wxs module="filter" src="../../filter/height.wxs"></wxs>
<view class='filter-view'>
  <view class='filter-title'>
    <text class='iconfont icon-wujiaoxing filter-close'></text>
    <text class='filter-header'>编辑筛选条件</text>
    <text bindtap='reset' class='filter-reset'>重置</text>
  </view>
  <scroll-view scroll-y class='filter-content'>
    <view class='filter-content-item'>
      <view class='filter-content-title'>空间类型</view>
      <view class='filter-content-con'>
        <view wx:for='{{spaceTypeList}}' wx:key='{{item.id}}' data-id='{{item.id}}' bindtap='chooseType' class='filter-item {{filter.hasEle(currentTypes, item.id) ? "active" : ""}}'>{{item.name}}</view>
      </view>
    </view>
    <view class='filter-content-item'>
      <view class='filter-content-title'>服务区服</view>
      <view class='filter-content-con'>
        <price-range></price-range>
      </view>
    </view>
    <view class='filter-content-item'>
      <view class='filter-content-title'>适用品类</view>
      <view class='filter-content-con'>
        <view wx:for='{{categoryList}}' wx:key='{{item.id}}' data-id='{{item.id}}' bindtap='chooseCate' class='filter-item {{filter.hasEle(currentCates, item.id) ? "active" : ""}}'>{{item.name}}</view>
      </view>
    </view>
    <view class='filter-content-item'>
      <view class='filter-content-title'>便利设施</view>
      <view class='filter-content-con'>
        <view wx:for='{{getconvenienceList}}' wx:key='{{item.id}}' data-id='{{item.id}}' bindtap='chooseFac' class='filter-item {{filter.hasEle(currentFacs, item.id) ? "active" : ""}}'>{{item.name}}</view>
      </view>
    </view>
  </scroll-view>
  <view class='filter-btn' bindtap='_submit'>查看空间</view>
</view>

