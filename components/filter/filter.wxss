/* components/filter/filter.wxss */

.filter-view{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99999;
  background: #fff;
  padding: 0 32rpx 32rpx;
  box-sizing: border-box;
}
.filter-title{
  line-height: 144rpx;
  height: 144rpx;
  display: flex;
  justify-content: space-between;
}
.filter-title .filter-close{
  color: #212121;
  font-size: 32rpx;
}
.filter-title .filter-header{
  color: #212121;
  font-size: 32rpx;
}
.filter-title .filter-reset{
  font-size: 28rpx;
  color: #ff5555;
}

.filter-content{
  max-height: calc(100% - 232rpx);
}
.filter-content .filter-content-item{
  margin-top: 20rpx;
}
.filter-content .filter-content-item .filter-content-title{
  font-size: 24rpx;
  color: #9e9e9e;
}
.filter-content .filter-content-item .filter-content-con .filter-item{
  display: inline-block;
  border: 2rpx solid #e0e0e0;
  font-size: 24rpx;
  color: #212121;
  text-align: center;
  line-height: 34rpx;
  padding: 12rpx 28rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.filter-content .filter-content-item .filter-content-con .filter-item.active{
  border-color: #ff5555;
  color: #ff5555;
}





.filter-btn{
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #ff5555;
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
}