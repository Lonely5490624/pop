/**index.wxss**/

.section{
  padding-top: 10rpx;
}
.section .title{
  font-size: 40rpx;
  color: #212121;
  line-height: 56rpx;
  padding: 20rpx 0;
  display: block;
}
.shangq .shangq-scroll{
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  white-space: nowrap;
  justify-content: space-between;
}
.shangq .shangq-scroll .shangq-scroll-item{
  position: relative;
  width: 320rpx;
  height: 180rpx;
  display: inline-block;
  margin-right: 12rpx;
}
.shangq .shangq-scroll .shangq-scroll-item .shangq-text-cn{
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 60rpx;
  transform: translateX(-50%);
}
.shangq .shangq-scroll .shangq-scroll-item .shangq-text-en{
  font-size: 20rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 102rpx;
  transform: translateX(-50%);
}
.shangq .shangq-scroll .shangq-scroll-item .shangq-img{
  width: 100%;
  height: 100%;
}

.recommend .recommend-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.recommend .recommend-item{
  width: 332rpx;
  height: 522rpx;
  display: inline-block;
  margin-bottom: 40rpx;
}
.recommend .recommend-item .recommend-box{
  position: relative;
}
.recommend .recommend-item .recommend-box .recommend-img{
  width: 332rpx;
  height: 332rpx;
}
.recommend .recommend-item .recommend-box .recommend-official{
  position: absolute;
  left: 0;
  top: 0;
  background: #212121;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  width: 98rpx;
  font-size: 20rpx;
  border-bottom-right-radius: 4rpx;
  z-index: 9;
}
.recommend .recommend-item .recommend-box .recommend-collect{
  width: 32rpx;
  height: 28rpx;
  position: absolute;
  right: 22rpx;
  top: 20rpx;
  z-index: 9;
}
.recommend .recommend-item .recommend-box .recommend-collect.collect{
  color: #ff5555;
}
.recommend .recommend-item .recommend-info{
  height: 190rpx;
}
.recommend .recommend-item .recommend-info .recommend-tip{
  font-size: 24rpx;
  color: #9e9e9e;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}
.recommend .recommend-item .recommend-info .recommend-title{
  display: block;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #212121;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.recommend .recommend-item .recommend-info .recommend-bottom .recommend-price{
  color: #ff5555;
  font-size: 32rpx;
  font-weight: bold;
}
.recommend .recommend-item .recommend-info .recommend-bottom .recommend-score{
  color: #9e9e9e;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 10rpx;
}
.recommend .recommend-more{
  text-align: center;
  margin-top: 8rpx;
}
.recommend .recommend-more .recommend-more-btn{
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #ff5555;
  font-size: 24rpx;
  color: #ff5555;
  display: inline-block;
  border-radius: 4rpx;
}

.story .story-scroll{
  height: 274rpx;
  width: 100%;
  white-space: nowrap;
}
.story .story-scroll .story-scroll-item{
  width: 280rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.story .story-scroll .story-scroll-item .story-img{
  width: 280rpx;
  height: 180rpx;
  display: block;
}
.story .story-scroll .story-scroll-item .story-title{
  font-size: 28rpx;
  color: #212121;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 18rpx;
}
.story .story-scroll .story-scroll-item .story-info{
  font-size: 20rpx;
  color: #9e9e9e;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 8rpx;
}

.index-adv{
  width: 100%;
  height: auto;
  margin-top: 66rpx;
}
.index-adv image{
  width: 100%;
  vertical-align: middle;
}