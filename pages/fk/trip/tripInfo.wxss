page {
  background: #f5f5f5;
}

.page {
  padding: 0;
}

.top {
  width: 100%;
  height: 420rpx;
  background: #f55;
  position: relative;
  padding-top: 100rpx;
}

.top .t1 {
  font-size: 48rpx;
  color: #fff;
}

.top .t2 {
  font-size: 24rpx;
  color: #fff;
  margin-top: 10rpx;
}

.top .t3 {
  width: 90%;
  height: 174rpx;
  background: #fff;
  border-radius: 8px;
  display: flex;
  justify-content: space-around;
  padding-top: 34rpx;
  position: absolute;
  left: 5%;
  bottom: -30rpx;
}

.top .t3 .t3_left image {
  width: 160rpx;
  height: 120rpx;
}

.top .t3 .t3_right .t3_r_l1 {
  font-size: 32rpx;
  color: #212121;
  margin-bottom: 8rpx;
}

.top .t3 .t3_right .t3_r_l2 {
  font-size: 24rpx;
  color: #9e9e9e;
  margin-bottom: 16rpx;
}

.top .t3 .t3_right .t3_r_l3 {
  font-size: 28rpx;
  color: #212121;
}

.box2 {
  width: 90%;
  height: 240rpx;
  background: #fff;
  border-radius: 8px;
  margin-left: 5%;
  margin-top: 50rpx;
  padding: 22rpx;
  box-sizing: border-box;
}

.box2_t1 {
  width: 100%;
  height: 98rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.box2_t1_l {
  font-size: 24rpx;
  color: #212121;
}

.box2_t1_2 image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  border: 1px red solid;
}

.box2_t2 {
  width: 100%;
  height: 98rpx;
  overflow: hidden;
  clear: both;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #616161;
  font-size: 20rpx;
}

.box2_t2_1 {
  width: 50%;
  height: 100%;
}

.box2_t2_1 {
  text-align: center;
}

.box3 {
  width: 100%;
  height: auto;
