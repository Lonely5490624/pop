/* pages/fk/search/search.wxss */
.search{
  padding: 0 32rpx;
}
.search-header{
  display: flex;
  justify-content: space-between;
  line-height: 90rpx;
}
.search-header input{
  border-bottom: 2rpx solid #e0e0e0;
  padding: 28rpx 0;
  font-size: 24rpx;
  flex-shrink: 1;
  width: 100%;
}
.search-header .cancel{
  font-size: 28rpx;
  color: #212121;
  flex-shrink: 0;
  margin-left: 30rpx;
}
.search-hot{
  margin-top: 40rpx;
}
.search-hot .hot-title{
  font-size: 24rpx;
  color: #9e9e9e;
}
.search-hot .hot-item{
  font-size: 24rpx;
  color: #212121;
  line-height: 34rpx;
  padding: 14rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  display: inline-block;
}
.search-history{
  margin-top: 66rpx;
}
.history-title{
  display: flex;
  justify-content: space-between;
}
.history-title .title{
  font-size: 24rpx;
  color: #9e9e9e;
}
.history-title .clear{
  font-size: 24rpx;
  color: #9e9e9e;
}
.history-list{
  font-size: 24rpx;
  color: #212121;
}
.history-list .history-item{
  line-height: 88rpx;
  padding: 0 10rpx;
}
.history-list .iconfont{
  font-size: 30rpx;
  color: #e0e0e0;
  margin-right: 30rpx;
  vertical-align: -2rpx;
}