/* pages/fk/order/order-confirm-2.wxss */
.order-title{
  display: flex;
  padding: 24rpx 32rpx;
  flex: auto;
}
.order-title image{
  width: 160rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.order-title text{
  width: 498rpx;
  font-size: 28rpx;
  color: #212121;
  line-height: 44rpx;
}
.order-price{
  margin-top: 44rpx;
}
.order-price .order-way{
  display: flex;
  justify-content: space-between;
  padding: 26rpx 32rpx 20rpx;
  line-height: 44rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.order-price .order-way .way-left{
  font-size: 28rpx;
  color: #212121;
}
.order-price .order-way .way-right{
  font-size: 28rpx;
  color: #ff5555;
}
.order-price .order-all{
  line-height: 44rpx;
  padding: 26rpx 32rpx;
  display: flex;
  justify-content: space-between;
}
.order-price .order-all .all-left,
.order-price .order-all .all-right{
  font-size: 28rpx;
  color: #9e9e9e;
}
.order-price .order-detail{
  margin-top: 16rpx;
  line-height: 34rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.order-price .order-detail .detail-left,
.order-price .order-detail .detail-right{
  font-size: 24rpx;
  color: #616161;
}
.order-price .order-deposit{
  padding: 42rpx 32rpx 38rpx;
  display: flex;
  justify-content: space-between;
  color: #212121;
  border-bottom: 2rpx solid #e0e0e0;
  font-weight: bold;
}
.order-price .order-deposit .deposit-left{
  font-size: 28rpx;
}
.order-price .order-deposit .deposit-right{
  font-size: 36rpx;
}
.order-zhengche{
  padding: 10rpx 32rpx 0;
}
.order-zhengche .zhengche-title{
  font-size: 24rpx;
  color: #212121;
  line-height: 34rpx;
  padding: 18rpx 0;
}
.order-zhengche .zhengche-info{
  line-height: 36rpx;
  font-size: 20rpx;
  color: #9e9e9e;
}
.order-zhengche .zhengche-info .zhengche-all{
  color: #ff5555;
}
.order-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 98rpx;
  display: flex;
  flex: auto;
}
.order-bottom .bottom-left{
  background: #f5f5f5;
  color: #212121;
  padding: 0 32rpx;
  flex-shrink: 1;
  width: 100%;
  font-weight: bold;
}
.order-bottom .bottom-right{
  background: #ff5555;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  width: 280rpx;
  flex-shrink: 0;
  font-weight: bold;
}