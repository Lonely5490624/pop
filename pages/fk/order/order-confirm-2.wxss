/* pages/fk/order/order-confirm-2.wxss */
.order-title{
  display: flex;
  padding: 24rpx 32rpx;
  flex: auto;
}
.order-title image{
  width: 160rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.order-title text{
  width: 498rpx;
  font-size: 28rpx;
  color: #212121;
  line-height: 44rpx;
}
.order-price{
  margin-top: 44rpx;
}
.order-price .order-way{
  display: flex;
  justify-content: space-between;
  padding: 26rpx 32rpx 20rpx;
  line-height: 44rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.order-price .order-way .way-left{
  font-size: 28rpx;
  color: #212121;
}
.order-price .order-way .way-right{
  font-size: 28rpx;
  color: #ff5555;
}
.order-price .order-all{
  line-height: 44rpx;
  padding: 26rpx 32rpx;
  display: flex;
  justify-content: space-between;
}
.order-price .order-all .all-left,
.order-price .order-all .all-right{
  font-size: 28rpx;
  color: #9e9e9e;
}
.order-price .order-detail{
  margin-top: 16rpx;
  line-height: 34rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.order-price .order-detail .detail-left,
.order-price .order-detail .detail-right{
  font-size: 24rpx;
  color: #616161;
}
.order-price .order-deposit{
  padding: 42rpx 32rpx 38rpx;
  display: flex;
  justify-content: space-between;
  color: #212121;
  border-bottom: 2rpx solid #e0e0e0;
  font-weight: bold;
}
.order-price .order-deposit .deposit-left{
  font-size: 28rpx;
}
.order-price .order-deposit .deposit-right{
  font-size: 36rpx;
}
.order-zhengche{
  padding: 10rpx 32rpx 0;
}
.order-zhengche .zhengche-title{
  font-size: 24rpx;
  color: #212121;
  line-height: 34rpx;
  padding: 18rpx 0;
}
.order-zhengche .zhengche-info{
  line-height: 36rpx;
  font-size: 20rpx;
  color: #9e9e9e;
}
.order-zhengche .zhengche-info .zhengche-all{
  color: #ff5555;
}
.order-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 98rpx;
  display: flex;
  flex: auto;
}
.order-bottom .bottom-left{
  background: #f5f5f5;
  color: #212121;
  padding: 0 32rpx;
  flex-shrink: 1;
  width: 100%;
  font-weight: bold;
}
.order-bottom .bottom-right{
  background: #ff5555;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  width: 280rpx;
  flex-shrink: 0;
  font-weight: bold;
}

.contractor{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 11;
  background: #fff;
  transform: translateY(100%);
  transition: .6s ease-in-out
}
.contractor.show{
  transform: translateY(0);
}
.contractor .contractor-header{
  text-align: center;
  position: relative;
  font-size: 32rpx;
  color: #212121;
  line-height: 88rpx;
  margin: 0 32rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.contractor .contractor-header .close{
  position: absolute;
  right: 0;
  color: #9e9e9e;
}
.radio-group{
  height: 400rpx;
  padding-bottom: 98rpx;
}
.radio{
  display: flex;
  border-bottom: 2rpx solid #e0e0e0;
  padding: 22rpx 32rpx 18rpx;
  justify-content: space-between;
}
 .item-name{
  font-size: 28rpx;
  color: #212121;
  line-height: 44rpx;
}
 .item-name image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.contractor-item .item-info .item-id{
  font-size: 28rpx;
  color: #9e9e9e;
  line-height: 40rpx;
}
.contractor-item .item-check{
  width: 40rpx;
  line-height: 80rpx;
  background-size: 100%;
}

.contractor .contractor-content .contractor-add{
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #ff5555;
  line-height: 44rpx;
}
.contractor .contractor-bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  color: #fff;
  background: #ff5555;
  text-align: center;
  line-height: 98rpx;
  font-size: 34rpx;
}

.pop-over{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
  background: rgba(4, 4, 15,.25);
  display: none;
}
.pop-over.show{
  display: block;
}
/* 日期组件 */
.datepage {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000000;
  top: 0;
  left: 0;
  background: #FFFFFF;
  transform: translateY(-100%);
  transition: .5s ease-in-out;
}
.datepage.show{
  transform: translateY(0);
}
.filter{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000000;
  top: 0;
  left: 0;
  background: #FFFFFF;
  transform: translateY(-100%);
  transition: .5s ease-in-out;
}
.filter.show{
  transform: translateY(0);
}