.top{
  width: 100%;
  height: 144rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-top: 62rpx;
  }
.top_l{
float: left;
}
.top_l .name{
  color: #212121;
  font-size: 48rpx;
  font-weight: bold;  
}
.top_l .editbtn{
  color: #616161;
  font-size: 20rpx;
  margin-top: 10rpx;
  
}
.top_r{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  float: right;
}
.top_r image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.content{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 40rpx;
}
.content .con_list{
  width: 100%;
  height: 88rpx;
  border-bottom: 1px #e0e0e0 solid;
  padding: 0 32rpx;
  box-sizing: border-box;
  line-height: 88rpx;
}
.content .con_list .con_list_l{
  float: left;
  color: #212121;
  font-size: 28rpx;
}
.content .con_list .con_list_r{
  float: right;
  color: #E0E0E0;
}
.content .con_list .con_list_c{
  color: #FF3B30;
  font-size: 28rpx;
  width: 100;
  text-align: center;
}