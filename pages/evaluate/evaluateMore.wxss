/* pages/fd/data/index.wxss */

.top image {
  width: 180rpx;
  height: 120rpx;
  float: left;
  margin-right: 30rpx;
  margin-bottom: 50rpx;
}

.top .title {
  font-size: 28rpx;
  color: #212121;
  line-height: 44rpx;
}
.pingList{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  display:flex;
  justify-content:space-between;
  align-items: center;
}
.t2 {
  clear: both;
  color: #212121;
  font-size: 28rpx;
  text-align: center;
}

.nextBtn {
  width: 90%;
  height: 88rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  border-radius: 6rpx;
}
.unable {
  background: #e0e0e0;
  color: #616161;
}
.able {
  background: #FF5555;
  color: #fff;
}
.score{
  font-size: 24rpx;
  color: #9E9E9E;
  text-align: center;
}
.xing{
  color: #E0E0E0;
  font-size: 54rpx;
  display: flex;
}
.active{
  color: #FF5555;
}
.xing text{
  margin-right: 20rpx;
}
