/* pages/login/registerYz.wxss */
.yz-title{
  font-size: 36rpx;
  padding-left: 32rpx;
  margin-top: 40rpx;
}
.yz-list{
  margin-top: 60rpx;
}
.yz-list .item{
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 28rpx;
  line-height: 100rpx;
}
.item-right{
  text-align: right;
}
.item-right input{
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
}
.done{
  width: calc(100% - 64rpx);
  margin-left: 32rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #ff5555;
  font-size: 28rpx;
  margin-top: 60rpx;
}
.skip{
  width: calc(100% - 64rpx);
  margin-left: 32rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.tips{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.tips text{
  color: #0085ff;
}
.xieyi{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 32rpx;
  background-color: #fff;
  z-index: 9;
  transition: .6s ease-in-out;
  transform: translateY(100%);
}
.xieyi.show{
  transform: translateY(0);
}
.xieyi-title{
  line-height: 94rpx;
  bottom: 2rpx solid #f3f3f3;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #3c3c3c;
}
.xieyi-title text{
  position: absolute;
  right: 40rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
}
.xieyi-content{
  font-size: 24rpx;
  color: #9e9e9e;
  height: calc(100% - 94rpx);
  overflow-y: auto;
  line-height: 40rpx;
}