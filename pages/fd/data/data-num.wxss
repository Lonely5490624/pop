/* pages/fd/data/data-num.wxss */
.num{
  padding: 0 32rpx;
}
.num .num-title{
  font-size: 48rpx;
  color: #212121;
  font-weight: bold;
  padding: 48rpx 0 16rpx;
}
.num-item{
  margin-top: 32rpx;
}
.num-item .p1{
  font-size: 24rpx;
  color: #9e9e9e;
}
.num-item .p2{
  display: flex;
  align-items: center;
}
.num-item .p2 .reply,
.num-item .p2 .score,
.num-item .p2 .times{
  width: 200rpx;
  flex-shrink: 0;
  line-height: 68rpx;
}
.num-item.good .p2 .reply .t1,
.num-item.good .p2 .score .t1,
.num-item.good .p2 .times .t1{
  color: #ff5555;
}
.num-item.bad .p2 .reply .t1,
.num-item.bad .p2 .score .t1,
.num-item.bad .p2 .times .t1{
  color: #212121;
}
.num-item .p2 .reply .t2,
.num-item .p2 .score .t2,
.num-item .p2 .times .t2{
  color: #9e9e9e;
  font-size: 28rpx;
}
.num-item .p2 .info{
  width: 100%;
  flex-shrink: 1;
  font-size: 24rpx;
  color: #616161;
  line-height: 34rpx;
}

.claim-title{
  font-size: 40rpx;
  font-weight: bold;
  color: #212121;
  margin-top: 96rpx;
}
.claim-list{
  margin-top: 24rpx;
}
.claim-list .item{
  display: flex;
  line-height: 34rpx;
  padding: 16rpx 0;
  font-size: 24rpx;
}
.claim-list .item.border{
  border-bottom: 2rpx solid #e0e0e0;
}
.claim-list .item .left{
  width: 448rpx;
}
.claim-list .item .right{
  width: 238rpx;
}
.claim-tip{
  color: #9e9e9e;
  font-size: 20rpx;
  margin-top: 24rpx;
}
.claim-tip .more{
  color: #0085ff;
}