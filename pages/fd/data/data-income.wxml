    <view class='chart-title'>
      <text class='yi'>已转款</text>
      <text class='ji'>即将转款</text>
    </view>
    <view class='chart-content'>
      <view bindtap='prevTap' class='chart-prev'><text class='iconfont icon-jiantouzuo'></text></view>
      <scroll-view scroll-x scroll-left='{{scrollLeft}}' class='chart-show'>
        <view wx:for='{{income}}' wx:key='{{item.id}}' data-id='{{item.id}}' bindtap='chooseItem' class='chart-item {{currentId === item.id ? "active" : ""}}'>
