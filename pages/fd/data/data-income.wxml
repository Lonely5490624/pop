          <view class='item-yi' style='height: {{filter.getHeight(item.yi, maxHeight)}}rpx;'></view>
          <view class='item-ji' style='height: {{filter.getHeight(item.ji, maxHeight)}}rpx;'></view>
        </view>
      </scroll-view>
      <view bindtap='nextTap' class='chart-next'><text class='iconfont icon-icon_arrow_right'></text></view>
    </view>
    <view class='chart-price'>
      <view class='price-all'>￥17900.50</view>
