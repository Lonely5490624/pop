/* pages/fd/data/data-score.wxss */
.space{
  padding: 0 32rpx;
  position: relative;
  background: #fff;
  z-index: 9999;
}
.space .space-title{
  text-align: center;
  font-size: 32rpx;
  color: #212121;
}
.space .space-list{
  width: calc(100% - 64rpx);
  padding-top:10rpx;
  display: none;
  position: absolute;
  background: #fff;
}
.space .space-list.active{
  display: block;
}
.space .space-list .space-item{
  font-size: 28rpx;
  color: #212121;
  line-height: 48rpx;
  padding: 20rpx 44rpx 20rpx 0;
}
.space .space-list .space-item.active{
  color:#FF5555;  
  
  background: url(data:image/png;base64,) right center no-repeat;
  background-size: 30rpx; 
}
.reply{
  color: #FF3939;
  font-size: 20rpx;
  width: 100%;
  border-left:1px #9e9e9e solid;
  margin-top:16rpx; 
  padding-left:20rpx;
  box-sizing: border-box; 
  line-height: 32rpx;
}
.score{
  padding: 0 32rpx;
}
.score-title{
  font-size: 48rpx;
  color: #212121;
  font-weight: bold;
  padding: 48rpx 0;
  display: flex;
  justify-content:space-between;
}
.score-list .score-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 60rpx;
}
.score-list .score-item .img{
  width: 140rpx;
  height: 27rpx;
}
.score-list .score-item .progress{
  width: 400rpx;
}
.score-list .score-item .percent{
  font-size: 24rpx;
  color: #212121;
}

.eval{
  padding-left: 32rpx;
  margin-top: 84rpx;
}
.eval-title{
  font-size: 40rpx;
  color: #212121;
  font-weight: bold;
  line-height: 44rpx;
}
.eval-list{
  margin-top: 38rpx;
}
.eval-item{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-top:10rpx; 
  border-bottom:2rpx solid #e0e0e0;
  padding-bottom: 20rpx;
}
.eval-item .eval-detail{
  display: flex;
  justify-content: space-between;
}
.eval-detail .eval-avatar{
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}
.eval-detail .eval-avatar image{
  width: 48rpx;
  height: 48rpx;
}
.eval-detail .eval-info{
  width: 620rpx;
  padding-right: 32rpx;
}
.eval-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.eval-top .username{
  font-size: 28rpx;
  color: #212121;
  line-height: 32rpx;
}
.eval-top .score{
  width: 140rpx;
  height: 27rpx;
}
.eval-top .time{
  font-size: 20rpx;
  color: #9e9e9e;
}
.eval-bottom{
  font-size: 24rpx;
  color: #9e9e9e;
  line-height: 36rpx;
  margin-top: 14rpx;
}
.eval-item .eval-control{
  text-align: right;
  padding-right: 32rpx;
  margin-top: 32rpx;
  margin-left: 68rpx;
  /* padding-bottom: 20rpx; */
  /* border-bottom: 2rpx solid #e0e0e0; */
}
.eval-item .eval-control .eval-reply{
  display: inline-block;
  width: 128rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: #ff5555;
  border: 2rpx solid #ff5555;
  text-align: center;
  font-size: 24rpx;
}
.eval-item .eval-control .eval-report{
  display: inline-block;
  font-size: 24rpx;
  color: #212121;
  line-height: 44rpx;
  margin-left: 20rpx;
}

.eval-form{
  padding-left: 68rpx;
  margin-top: 34rpx;
}
.eval-form textarea{
  font-size: 24rpx;
  color: #9e9e9e;
  line-height: 34rpx;
  height: 120rpx;
}
.eval-form .form-control{
  display: flex;
  justify-content: space-between;
}
.eval-form .form-control .form-num{
  font-size: 20rpx;
  color: #9e9e9e;
  line-height: 34rpx;
}
.eval-form .form-control .form-btn{
  padding-right: 32rpx;
  display: inline-block;
  text-align: center;
}
.eval-form .form-control .form-btn .cancel{
  font-size: 24rpx;
  color: #9e9e9e;
  display: inline-block;
  padding: 8rpx 0;
  width: 88rpx;
}
.eval-form .form-control .form-btn .submit{
  font-size: 24rpx;
  color: #ff5555;
  border: 2rpx solid #ff5555;
  width: 128rpx;
  display: inline-block;
  padding: 8rpx 0;
}
.pingList{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  display:flex;
  justify-content:space-between;
  align-items: center;
}
.t2 {
  clear: both;
  color: #212121;
  font-size: 28rpx;
  text-align: center;
}
.xing{
  color: #E0E0E0;
  font-size: 54rpx;
  display: flex;
}
.active{
  color: #FF5555;
}
.xing text{
  margin-right:6rpx;
}
.score{
  font-size: 24rpx;
  color: #9E9E9E;
}