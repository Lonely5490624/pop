/* pages/fd/data/data-view.wxss */
.space{
  padding: 0 32rpx;
  position: relative;
  background: #fff;
  z-index: 9999;
}
.space .space-title{
  text-align: center;
  font-size: 32rpx;
  color: #212121;
}
.space .space-list{
  width: calc(100% - 64rpx);
  padding-top:10rpx;
  display: none;
  position: absolute;
  background: #fff;
}
.space .space-list.active{
  display: block;
}
.space .space-list .space-item{
  font-size: 28rpx;
  color: #212121;
  line-height: 48rpx;
  padding: 20rpx 44rpx 20rpx 0;
}
.space .space-list .space-item.active{
  color:#FF5555;  
  
  background: url(data:image/png;base64,) right center no-repeat;
  background-size: 30rpx; 
}
.view {
  padding: 0 32rpx;
}

.view-title {
  font-size: 48rpx;
  color: #212121;
  font-weight: bold;
}

.chart-title {
  font-size: 20rpx;
  color: #212121;
  line-height: 28rpx;
  margin-top: 40rpx;
}

.chart-title text {
  display: inline-block;
  margin-right: 40rpx;
}

.chart-title .yi::before {
  display: inline-block;
  content: "";
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #f55;
  margin-right: 8rpx;
}

.chart-title .ji::before {
  display: inline-block;
  content: "";
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #616161;
  margin-right: 8rpx;
}

.chart-content {
  display: flex;
  justify-content: space-between;
}

.chart-content .chart-prev, .chart-content .chart-next {
  width: 28rpx;
  line-height: 400rpx;
  text-align: center;
}

.chart-content .chart-show {
  width: 100%;
  height: 400rpx;
}

.chart-price .price-all {
  font-size: 48rpx;
  color: #212121;
  margin-top: 44rpx;
}

.chart-price .price-info {
  font-size: 20rpx;
  color: #9e9e9e;
  line-height: 28rpx;
  margin-top: 16rpx;
}

.view-list .view-top {
  display: flex;
  justify-content: space-between;
  text-align: left;
  padding: 18rpx 32rpx 16rpx;
}

.view-list .view-top .item {
  width: 50%;
}

.view-list .view-top .item .p1 {
  font-size: 36rpx;
  color: #212121;
  font-weight: bold;
  line-height: 44rpx;
}

.view-list .view-top .item .p2 {
  font-size: 24rpx;
  color: #9e9e9e;
  line-height: 40rpx;
  margin-top: 2rpx;
}

.view-list .view-bottom {
  border-top: 2rpx solid #e0e0e0;
  display: flex;
  flex-wrap: wrap;
  margin-top: 48rpx;
}

.view-list .view-bottom .item {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e0e0e0;
  width: 50%;
  font-size: 28rpx;
  color: #212121;
  text-align: center;
  padding: 36rpx 0;
  border-right: 2rpx solid #e0e0e0;
}

.view-list .view-bottom .item.br-0 {
  border-right: none;
}

.box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

ec-canvas {
  width: 100%;
  height: 600rpx;
  
}

.container {
  width: 100%;
  height: 600rpx;
  
}
