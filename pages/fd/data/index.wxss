/* pages/fd/data/index.wxss */
.data{
  padding: 0 32rpx;
}
.data-title{
  font-size: 48rpx;
  color: #212121;
  font-weight: bold;
}
.data-income{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 84rpx 0 82rpx;
}
.data-income .income .income-all{
  font-size: 60rpx;
  color: #212121;
  font-weight: bold;
  line-height: 44rpx;
}
.data-income .income .income-date{
  font-size: 36rpx;
  color: #9e9e9e;
  margin-top: 32rpx;
  line-height: 40rpx;
}
.data-income .iconfont{
  color: #e0e0e0;
}
.data-views{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e0e0e0;
  padding: 9rpx 0;
}
.data-views .views{
  width: 50%;
}
.data-views .views .views-all{
  font-size: 36rpx;
  color: #212121;
  font-weight: bold;
  line-height: 44rpx;
}
.data-views .views .views-all text{
  font-size: 24rpx;
  color: #9e9e9e;
}
.data-views .views .views-date{
  font-size: 24rpx;
  color: #9e9e9e;
  margin-top: 2rpx;
  line-height: 40rpx;
}
.data-views .iconfont{
  color: #e0e0e0;
}
.data-score{
  display: flex;
  justify-content: space-between;
  padding: 80rpx 0 20rpx;
}
.data-score .score .score-all{
  font-size: 40rpx;
  color: #212121;
  font-weight: bold;
  line-height: 44rpx;
}
.data-score .score .score-date{
  font-size: 24rpx;
  color: #9e9e9e;
  margin-top: 8rpx;
  line-height: 40rpx;
}
.data-num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e0e0e0;
  padding: 16rpx 0;
}
.data-num .num .num-all{
  font-size: 36rpx;
  color: #212121;
  font-weight: bold;
}
.data-num .num .num-all text{
  font-size: 24rpx;
  color: #9e9e9e;
}
.data-num .num .num-date{
  font-size: 24rpx;
  color: #9e9e9e;
  margin-top: 2rpx;
  line-height: 40rpx;
}
.data-num .iconfont{
  color: #e0e0e0;
}
.data-times{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
}
.data-times .times{
  width: 50%;
}
.data-times .times .times-all{
  font-size: 36rpx;
  color: #212121;
  font-weight: bold;
}
.data-times .times .times-date{
  font-size: 24rpx;
  color: #9e9e9e;
  margin-top: 2rpx;
  line-height: 40rpx;
}