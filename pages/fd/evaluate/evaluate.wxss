/* pages/fd/Evaluate/evaluate.wxss */
.space-title{
  display: flex;
  padding: 24rpx 32rpx;
  flex: auto;
}
.space-title image{
  width: 160rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.space-title text{
  width: 498rpx;
  font-size: 28rpx;
  color: #212121;
  line-height: 44rpx;
}
.evaluate{
  text-align: center;
}
.evaluate .p1{
  font-size: 28rpx;
}
.evaluate .icon .iconfont{
  font-size: 40rpx;
}
.textarea{
  padding: 0 32rpx;
  position: relative;
  font-size: 28rpx;
}
.textarea textarea{
  width: 100%;
  border: 1px solid #e4e4e4;
  padding: 8rpx;
}
.textarea .count{
  position: absolute;
  bottom: 10rpx;
  right: 42rpx;
}
.nextBtn {
  width: 90%;
  height: 88rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  border-radius: 6rpx;
}
.unable {
  background: #e0e0e0;
  color: #616161;
}
.able {
  background: #FF5555;
  color: #fff;
}
.active{
  color: #FF5555;
}