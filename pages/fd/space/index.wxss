/* pages/fd/space/index.wxss */
page{
  background: #f5f5f5;
  height: 100%;
}
.space-title{
  background: #fff;
  color: #212121;
  font-size: 48rpx;
  padding: 46rpx 32rpx;
}
.space-tab{
  display: flex;
  background: #fff;
}
.space-tab .item{
  width: 50%;
  padding: 28rpx 32rpx;
  text-align: center;
  border-bottom: 2rpx solid #e5e5e5;
}
.space-tab .item.active{
  border-bottom: 6rpx solid #212121;
}
.space-con{
  display: none;
}
.space-con.active{
  display: block;
}
.space-item{
  margin-bottom: 12rpx;
  padding: 0 32rpx;
  background: #fff;
}
.space-info{
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
}
.space-info image{
  width: 160rpx;
  height: 120rpx;
}
.space-info .title{
  width: 498rpx;
  height: 120rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #212121;
}
.space-btns{
  text-align: right;
  padding: 20rpx 0;
}
.space-btns .btn{
  text-align: center;
  border: 2rpx solid #ff5555;
  line-height: 28rpx;
  color: #ff5555;
  font-size: 24rpx;
  padding: 10rpx 0;
  width: 128rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.space-btns .btn.edit{
  color: #fff;
  background: #ff5555;
}