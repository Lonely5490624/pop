/* pages/fd/space/add-3.wxss */
page{
  padding-bottom: 160rpx;
}
.main{
  padding: 0 32rpx;
}
.control{
  display: flex;
  justify-content: space-between;
  color: #ff5555;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 24rpx 0;
}
.list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list-nodata{
  text-align: center;
  font-size: 32rpx;
  color: #e4e4e4;
  padding-top: 300rpx;
}
.item{
  width: 336rpx;
  height: 224rpx;
  position: relative;
  margin-top: 20rpx;
}
.item .img{
  width: 100%;
  height: 100%;
}
.item .del{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -10rpx;
  z-index: 2;
}
.next{
  width: calc(100% - 64rpx);
  line-height: 46rpx;
  font-size: 32rpx;
  color: #fff;
  padding: 22rpx 0;
  border-radius: 8rpx;
  background: #ff5555;
  text-align: center;
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
}