      <view class='con-item'>服饰服装</view>
      <view class='con-item'>生活家居</view>
      <view class='con-item'>美妆护肤</view>
    </view>
  </view>
</view>
<view class='title'>店铺设施</view>
<view class='list'>
  <view class='item-ver'>
    <view class='con'>
      <view class='con-item active'>货架</view>
      <view class='con-item'>wifi</view>
      <view class='con-item active'>灯光</view>
      <view class='con-item'>wifi</view>
      <view class='con-item'>基础货架</view>
      <view class='con-item'>wifi</view>
      <view class='con-item'>灯光</view>
      <view class='con-item'>wifi</view>
      <view class='con-item active'>货架</view>
    </view>
  </view>
</view>
<view class='title'>其他信息</view>
<view class='list'>
  <view class='item'>
    <view class='left'>店长介绍</view>
    <view class='right'>
      <input type='text' placeholder='请输入' placeholder-style='color: #e0e0e0;'></input>
    </view>
  </view>
  <view class='item-ver'>
    <view class='p1'>店长技能</view>
    <textarea placeholder='请输入…'></textarea>
  </view>
</view>
<view class='title'>预定</view>
<view class='list'>
  <view class='item-ver'>
    <view class='p1'>对租客的要求</view>
    <view class='con'>
      <view class='con-item active'>要求</view>
      <view class='con-item'>要求要求</view>
      <view class='con-item'>要求要求</view>
      <view class='con-item'>要求要求</view>
