      <input type='text' placeholder='空间标题' placeholder-style='color: #e0e0e0;'></input>
    </view>
  </view>
  <view class='item-ver'>
    <view class='p1'>空间描述</view>
    <textarea placeholder='请输入…'></textarea>
  </view>
  <view class='item arrow'>
    <view class='left'>空间类型</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
  <view class='item-ver'>
    <view class='p1'>店铺品牌定位</view>
    <view class='con'>
      <view class='con-item active'>食品</view>
