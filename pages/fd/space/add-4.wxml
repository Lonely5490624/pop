<view class='title'>价格</view>
<view class='list'>
  <view class='item'>
    <view class='left'>每日价格</view>
    <view class='right'>
      <input type='text' placeholder='请输入' placeholder-style='color: #e0e0e0;'></input>
    </view>
  </view>
  <view class='item'>
    <view class='left'>周末价格（非必填）</view>
    <view class='right small'>
      <input type='text' placeholder='请输入' placeholder-style='color: #e0e0e0;'></input>
    </view>
  </view>
  <view class='item'>
    <view class='left'>xx费（每个订单一次性支付）</view>
    <view class='right small'>
      <input type='text' placeholder='请输入' placeholder-style='color: #e0e0e0;'></input>
    </view>
  </view>
</view>
<view class='title'>日历</view>
<view class='title-sub'>可定状态</view>
<view class='list'>
  <view class='item arrow'>
    <view class='left'>提前预定天数</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
  <view class='item arrow'>
    <view class='left'>可预订时段</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
