      <view class='con-item'>要求要求</view>
      <view class='con-item'>要求要求</view>
      <view class='con-item'>要求要求</view>
    </view>
  </view>
  <view class='item arrow'>
    <view class='left'>退订政策</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
  <view class='item-ver'>
    <view class='p1'>空间守则</view>
