    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
  <view class='item arrow'>
    <view class='left'>最多预定天数</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
</view>
<view class='title-sub'>入驻和清场时间</view>
<view class='list'>
  <view class='item arrow'>
    <view class='left'>经营时间</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
        <view>{{spaceTypes[spaceType]}}</view>
      </picker>
    </view>
  </view>
  <view class='item arrow'>
    <view class='left'>施工时间</view>
    <view class='right'>
      <picker bindchange="changeSpaceType" range='{{spaceTypes}}' mode="selector" value="{{spaceType}}">
